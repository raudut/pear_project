{% extends 'base.html.twig' %}

{% block title %}Ajouter Borrowing !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


    <h1>Formulaire d'emprunt</h1>

    <div>Bonjour {{app.user.username}} ! Que souhaitez-vous emprunter ?</div>

  <div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}



  {# Génération manuelle et éclatée : #}
  

  <div class="form-group">
  {{form_label(form.id_product, "Objet", {'label_attr' : {'class':'col-sm-2 control-label'}})}}
  {{form_errors (form.id_product)}}
      <div class="col-sm-10">
      {{ form_widget(form.id_product, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="form-group">
  {{form_label(form.dateDebut, "Date de début", {'label_attr' : {'class':'col-sm-2 control-label'}})}}
  {{form_errors (form.dateDebut)}}
      <div class="col-sm-10">
      {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>
<div class="form-group">
  {{form_label(form.dateFin, "Date de fin", {'label_attr' : {'class':'col-sm-2 control-label'}})}}
  {{form_errors (form.dateFin)}}
      <div class="col-sm-10">
      {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>


  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary' }}) }}

  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}

  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
</div> 

<div> 
<input type="button" name="home_link" value="Revenir à la page d'accueil" onclick="self.location.href='/'" style="background-color:#3cb371" style="color:white; font-weight:bold"onclick> 
</div>

{% endblock %}
