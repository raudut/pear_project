{% extends 'base.html.twig' %}
 {% block title %}Liste des objets{% endblock %}
 
  {% block body %}


    <div class="container">
      <div class="row">
        <div class="col-md-3">
          {%include  'product/_filter.html.twig' with {form: form} only %}
        </div>
      </div>



      <div class="col-md-9">        
        <table class="table table-hover">
          <thead>
            <tr>
              <th> Nom </th>
              <th> Prix </th>
              <th> Categorie </th>            
              <th> Owner </th>
              <th> Statut </th>
            </tr>
          </thead>
          <tbody>
          {% if products is defined %}
            {%for product in products %}
              <tr>
                <td>{{ product.nom }}</td>
                <td>{{ product.prix}}</td>
                <td>{{product.categorie}}</td>               
                <td>{{ product.owner }}</td>
                  {%for statut in product.statut%}
                    <td>{{ statut }} </td>
                  {%endfor%}
                <td>
                  <div class="btn-group btn-group-toggle" data-toggle="buttons">
                      <label class="btn btn-primary">
                        <input type="checkbox" onclick= autocomplete="off"> Details
                      </label>
                      <label class="btn btn-primary">
                        <input type="checkbox" onclick="self.location.href='/delete-product/{{product.id}}'" autocomplete="off"> Supprimer
                      </label>
                      <label class="btn btn-primary">
                        <input type="checkbox" onclick="self.location.href='/qrcode-product/{{product.id}}'" autocomplete="off"> Générer un QrCode
                      </label>
                  </div>
                </td>
              </tr>    			
            {% endfor %}
          {%endif%}
          </tbody>
        </table> 
      </div>
    </div>
  {% endblock %}



